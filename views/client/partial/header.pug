include ../mixin/sub-menu.pug
header.header 
    .container
        .row.align-items-center 
            .col-3
                .inner-logo
                    a(href="/")
                        img(src="/image/logo.png", alt="")

            .col-5  
                form(
                    action="/search"
                    method="GET"
                )
                    div(class="form-group d-flex mb-0")
                        input(
                            type="text"
                            placeholder="Nhập vào từ khóa"
                            class="form-control"
                            name="keyword"
                            value=keyword
                        )
                        button(
                            type="submit"
                            class="btn btn-primary"
                        ) Tìm
            
            .col-4 
                .inner-menu 
                    ul 
                        li
                            a(href="/") Trang chủ
                        li(class="sub-menu") 
                            -const path = "/products"
                            a(href="/products") Sản phẩm
                            +sub-menu(layoutProductCategory, path)
                            //- ul  
                            //-     li 
                            //-         a(href="products/slug-1") Mục 1
                            //-         ul 
                            //-             li 
                            //-                 a(href="products/slug-1-1") Mục 1-1
                            //-             li 
                            //-                 a(href="products/slug-1-2") Mục 1-2
                            //-                 ul 
                            //-                     li 
                            //-                         a(href="products/slug-1-2-1") Mục 1-2-1
                            //-                     li 
                            //-                         a(href="products/slug-1-2-2") Mục 1-2-2
                            //-     li
                            //-          a(href="products/slug-2") Mục 2
                        li
                            a(href="/cart") Giỏ hàng (#{miniCart ? miniCart.totalQuantity : "0"})
                        if(user)
                            li
                                a(href="/user/logout") Đăng xuất
                        else 
                            li  
                                a(href="/user/register") Đăng ký
                            li  
                                a(href="/user/login") Đăng nhập
