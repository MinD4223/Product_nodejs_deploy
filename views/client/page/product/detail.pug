extends ../../layout/default.pug

block main 
    if(product.title)
        h1(class="mb-4") #{product.title}
    
    if(product.price)
        div(class="mb-4") Price: <b>#{product.price}$</b>

    if(product.thumbnail)
        div(class="mb-4")
            img(
                src=product.thumbnail
                style="width: 100px"
            )
    
    form(
        action=`/cart/add/${product.id}`
        method="POST"
    )
        input(
            class="form-control"
            type="number"
            name="quantity"
            value="1"
            min="1"
            max=product.stock
        )
        button(
            type="submit"
            class="btn btn-success btn-block"
        ) Thêm vào giỏ hàng
    
    
