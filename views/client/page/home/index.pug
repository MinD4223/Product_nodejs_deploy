extends ../../layout/default.pug
include ../../mixin/box-head.pug

block main 
    h1 Trang chủ
    .container.my-3 
        .row 
            .col-12
                +box-head("Danh sách sản phẩm nổi bật")
        .row 
            each item in records
                .col-4.mb-3
                    .product-item
                        .inner-image
                            img(src= item.thumbnail, alt="" )
                            if(item.featured == "1")
                                .inner-featured Nổi bật
                        .inner-content
                            h3.inner-title 
                                a(href=`/products/detail/${item.slug}`) #{item.title}
                            .inner-price-new #{item.priceNew}$
                            .inner-price-old #{item.price }$
                            .inner-discount -#{item.discountPercentage}%
        .row 
            .col-12
                +box-head("Danh sách sản phẩm mới nhất")
        .row 
            each item in recordsLatest
                .col-4.mb-3
                    .product-item
                        .inner-image
                            img(src= item.thumbnail, alt="" )
                            if(item.featured == "1")
                                .inner-featured Nổi bật
                        .inner-content
                            h3.inner-title 
                                a(href=`/products/${item.slug}`) #{item.title}
                            .inner-price-new #{item.priceNew}$
                            .inner-price-old #{item.price }$
                            .inner-discount -#{item.discountPercentage}%                  