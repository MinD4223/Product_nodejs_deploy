extends ../../layout/default.pug
include ../../mixin/box-head.pug

block main 
    h1 Trang chủ
    .container.my-3 
        .row 
            .col-12
                +box-head("Danh sách sản phẩm nổi bật")
        .row.mb-3 
            .col-12
                a(
                    href="/rooms-chat/create"
                    class="btn btn-sm btn-success mr-1"
                ) Tạo phòng chat 
        .row
            .col-6
                each roomChat in listRoomChat
                    div(class="box-room")
                        div(class="inner-avatar")
                            img(
                                src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQXk5QAq2ORhMKQ9r_PtSufuko6Vq3i45Jmtw&s"
                                alt="Phognf"
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{roomChat.title}
                            div(class="inner-buttons")
                                a(
                                    href=`/chat/${roomChat.id}`
                                    class="btn btn-sm btn-primary mr-1"
                                ) Nhắn tin